{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"],
  "compilerOptions": {
    // "ignoreDeprecations": "5.0",
    "resolveJsonModule": true,
    "target": "ES2020",
    "baseUrl": ".",
    "paths": {
      "lib/*": ["src/lib/*"],
      "pages/*": ["src/pages/*"],
      "data/*": ["src/data/*"],
      "components/*": ["src/components/*"],
      "src/*": ["src/*"],
    }
  }
}